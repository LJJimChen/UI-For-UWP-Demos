                                                     Transitions="{x:Null}">
                                <telerikChart:LineSeries.CategoryBinding>
                                    <telerikChart:PropertyNameDataPointBinding PropertyName="Date" />
                                </telerikChart:LineSeries.CategoryBinding>
                                <telerikChart:LineSeries.ValueBinding>
